@page "/models/create/"
@inject HttpClient _httpClient
@inject NavigationManager _navigationManager
@attribute [Authorize]

<h3 class="card-title">Create New Model</h3>
<hr />
<br />

<ModelsComponent ButtonText="Create Model" model="model" OnValidSubmit="@CreateModel" />

@code {
    private Model model = new Model();

    private async Task CreateModel()
    {
        await _httpClient.PostAsJsonAsync<Model>(EndPoints.ModelsEndPoint, model);
        _navigationManager.NavigateTo("/models/");
    }
}
