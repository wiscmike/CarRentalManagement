@page "/colors/create/"
@inject HttpClient _httpClient
@inject NavigationManager _navigationManager
@attribute [Authorize]

<h3 class="card-title">Create New Color</h3>
<hr />
<br />

<ColorsComponent color="color" OnValidSubmit="@CreateColor" ButtonText="Create Color" />

@code {
    private Color color = new Color();

    private async Task CreateColor()
    {
        await _httpClient.PostAsJsonAsync<Color>(EndPoints.ColorsEndPoint, color);
        _navigationManager.NavigateTo("/colors/");
    }
}
